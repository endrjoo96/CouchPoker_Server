<UserControl x:Class="CouchPoker_Server.Controls.Dealer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CouchPoker_Server.Controls"
             mc:Ignorable="d" Height="auto" Width="auto" MinWidth="125">
    <Viewbox>
        <Grid>
            <Label Content="Pot:"
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" Foreground="White"
               Margin="0,0,0,0" Padding="5,0,0,0"/>
            <WrapPanel>
            <Label Content="$" HorizontalContentAlignment="Right"
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Top" Foreground="White"
               Margin="30,14,0,0" Padding="0,0,0,0" FontSize="24"/>
                <Label Name="Pot" Content="500000000000" HorizontalContentAlignment="Right"
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Top" Foreground="White"
               Margin="0,14,0,0" Padding="0,0,5,0" FontSize="24"/>
            </WrapPanel>
        </Grid>
    </Viewbox>
</UserControl>
